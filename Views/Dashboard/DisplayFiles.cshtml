@model List<MVC.Models.Storage>

@{
    ViewData["Title"] = "Display Files";
}

<div class="container mt-4">

    @if (TempData["InfoMessage"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            @TempData["InfoMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">üìÅ Uploaded Files</h4>
        </div>

        <div class="card-body p-0">

            @if (Model == null || !Model.Any())
            {
                <div class="p-4 text-center text-muted">
                    <p class="mb-0">No files found.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>File Name</th>
                                <th>Rows</th>
                                <th>Columns</th>
                                <th>Date</th>
                                <th>Checksum</th>
                                <th class="text-center">Analysis</th>
                            </tr>
                        </thead>

                        <tbody>
                        @foreach (var file in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@file.FileName</td>

                                <td>
                                    <span class="badge bg-secondary">
                                        @file.numRows
                                    </span>
                                </td>

                                <td>
                                    <span class="badge bg-secondary">
                                        @file.numCol
                                    </span>
                                </td>

                                <td class="text-muted">
                                    @file.dateTime
                                </td>

                                <td>
                                    <code class="small">@file.checksum</code>
                                </td>

                                <td class="text-center">
                                    <button class="btn btn-sm btn-outline-primary"
                                            data-bs-toggle="modal"
                                            data-bs-target="#analysisModal"
                                            data-analysis='@Html.Raw(file.AnalysisJson)'>
                                        View Analysis
                                    </button>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            }

        </div>
    </div>
</div>

<!-- Analysis Modal -->
<div class="modal fade" id="analysisModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">üìä Dataset Analysis</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body" id="analysisModalContent">
                <p class="text-muted">Loading analysis...</p>
            </div>

        </div>
    </div>
</div>

<script>
const analysisModal = document.getElementById('analysisModal');

analysisModal.addEventListener('show.bs.modal', function (event) {
    const button = event.relatedTarget;
    const json = button.getAttribute('data-analysis');

    if (!json) {
        document.getElementById("analysisModalContent").innerHTML =
            "<p class='text-muted'>No analysis available.</p>";
        return;
    }

    const analysis = JSON.parse(json);

    let html = `
        <div class="mb-3">
            <span class="badge bg-primary me-2">
                Rows: ${analysis.RowCount}
            </span>
            <span class="badge bg-primary">
                Columns: ${analysis.ColumnCount}
            </span>
        </div>
    `;

    analysis.Columns.forEach(col => {
        html += `
            <div class="card mb-3">
                <div class="card-header fw-semibold">
                    ${col.ColName}
                    <span class="badge bg-info ms-2">
                        ${col.Type === 1 ? 'Numeric' : 'Categorical'}
                    </span>
                </div>
                <ul class="list-group list-group-flush">
        `;

        if (col.Type === 1) {
            html += `
                <li class="list-group-item">Mean: <strong>${col.Mean}</strong></li>
                <li class="list-group-item">Median: <strong>${col.Median}</strong></li>
                <li class="list-group-item">Min: <strong>${col.Min}</strong></li>
                <li class="list-group-item">Max: <strong>${col.Max}</strong></li>
            `;
        } else {
            html += `
                <li class="list-group-item">Mode: <strong>${col.Mode}</strong></li>
                <li class="list-group-item">Unique Values: <strong>${col.UniqueCount}</strong></li>
            `;
        }

        html += `
                </ul>
            </div>
        `;
    });

    document.getElementById("analysisModalContent").innerHTML = html;
});
</script>

